------------------------------------------------------------------
>        Caml Light version 0.75

##open "unix";;
#time ();;
- : int = -1052752875
#gmtime (time ());;
- : tm =
  {tm_sec = 51; tm_min = 38; tm_hour = 8; tm_mday = 22; tm_mon = 7;
   tm_year = 36; tm_wday = 6; tm_yday = 234; tm_isdst = false}
#
