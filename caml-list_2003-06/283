 > module type A2 = sig
 >     type t 
 >     val toast : t -> t -> bool
 > end
 > 
 > module Make (A : A1 ) (B : A2 with type t = A.t) = struct
 >     let fifi a b c =
 >         if c > 1 then A.test a b 
 >         else B.toast b a
 > end
 > 
 > module AA : A1 = struct 
 >     type t = int
 >     let test f1 f2 = true
 > end
 > 
 > module BB : A2 = struct
 >     type t = int
 >     let toast f1 f2 = false
 > end
 > 
 > module C = Make (AA) (BB)
